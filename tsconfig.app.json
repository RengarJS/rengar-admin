{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["typings/app/*.d.ts", "typings/common/*.d.ts", "src/**/*", "src/**/*.vue", "packages/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "cmp/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "views/*": ["./src/views/*"],
      "utils/*": ["./src/utils/*"],
      "api/*": ["./src/api/modules/*"]
    }
  }
}
